<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".StudentData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iiii"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_dark"
            android:text="Student Data"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#5809E4" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/viewFaceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Face"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/captureFaceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Face"
            android:layout_marginTop="8dp" />


        <RadioGroup
            android:id="@+id/sexRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/educationLevelTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education Level">

            <AutoCompleteTextView
                android:id="@+id/educationLevelAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/subjectsOfInterestTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subjects of Interest">

            <AutoCompleteTextView
                android:id="@+id/subjectsOfInterestAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/tuitionSourceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/parentsRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parents" />

            <RadioButton
                android:id="@+id/guardianRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian" />

            <RadioButton
                android:id="@+id/scholarshipRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scholarship" />

            <RadioButton
                android:id="@+id/othersRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/homeAddressTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Home Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/homeAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/parentsNamesTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parents' Names">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/parentsNamesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/parentStatusRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/bothAliveRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both Alive" />

            <RadioButton
                android:id="@+id/oneDeceasedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Deceased" />

            <RadioButton
                android:id="@+id/divorcedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divorced" />

            <RadioButton
                android:id="@+id/togetherRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Still Together" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/religionTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Religion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/religionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/siblingsTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Siblings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/siblingsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp" />



    </LinearLayout>

</ScrollView>
